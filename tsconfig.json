{
  "compilerOptions": {
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": "types",
    "importHelpers": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "ES2015",
    "baseUrl": "."
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"]
}
